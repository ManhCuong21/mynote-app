<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--CheckBox-->
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>

        <item name="android:textViewStyle">@style/Widget.App.TextView</item>
    </style>
    <!-- Base application theme. -->

    <style name="Style_LinearLayoutCompat">
        <item name="background">@color/white</item>
        <item name="cornerRadius">@dimen/dimen_12</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TEXT_TITLE">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BACKGROUND_LAYOUT_CHILDREN">
        <item name="android:background">#F2F2F2</item>
    </style>

    <style name="Theme.App.TextInputEditText" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:paddingTop">@dimen/dimen_30</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/textinputlayout_edittext_cursor</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>

    <style name="Theme.AlertDialogFullScreenTransparent" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <item name="colorOnSurfaceVariant">@color/system_gray_disable</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="materialButtonStyle">@style/Theme.Button</item>
        <item name="borderlessButtonStyle">@style/Theme.TextButtonMaterial</item>
        <item name="materialCardViewStyle">@style/Theme.CardView</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="android:textViewStyle">@style/Widget.App.TextView</item>
    </style>

    <style name="Theme.AlertDialogFullScreen" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="materialButtonStyle">@style/Theme.Button</item>
        <item name="borderlessButtonStyle">@style/Theme.TextButtonMaterial</item>
    </style>

    <style name="Theme.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">@dimen/dimen_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_16</item>
    </style>

    <style name="Theme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dimen_16</item>
    </style>

    <style name="Theme.TextButtonMaterial" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/material_dynamic_primary0</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Theme.TextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Checkbox-->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_state_checked</item>
    </style>
</resources>