<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_12">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lTitleNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lContentNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCategoryNote"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_marginHorizontal="@dimen/dimen_8"
                android:src="@drawable/icon_travel" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                tools:text="HaLong Bay" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSecurityNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_biometric"
            android:visibility="gone"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnContentNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvContentNote"
                style="@style/TextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_8"
                android:ellipsize="end"
                android:maxLines="5"
                android:minHeight="@dimen/dimen_50"
                android:overScrollMode="always"
                android:textColor="@color/black"
                tools:text="Last year I went on a trip to Ha Long with my family. To make the trip more interesting my dad drove a family car himself..." />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/vHaveImage"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_choose_image" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/vHaveRecord"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginHorizontal="@dimen/dimen_8"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_choose_record" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/vHaveNotification"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_notification" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTimeNote"
            style="@style/TextContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:textColor="@color/system_gray_disable"
            android:textSize="@dimen/text_size_11sp"
            tools:text="Edited: 04-25-2022 | 11:39:02:37 AM" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>