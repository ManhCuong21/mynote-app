<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorBackgroundUnderline">@color/background_root_night</item>
        <item name="colorUnderline">@color/white</item>

        <!-- Text color-->
        <item name="customTextColor">@color/white</item>
    </style>

    <style name="BackgroundRoot">
        <item name="android:background">@color/background_root_night</item>
    </style>

    <style name="BackgroundContentRoot">
        <item name="android:background">@color/background_content_root_night</item>
    </style>

    <style name="BackgroundBorderTop">
        <item name="android:background">@drawable/border_top_background_night</item>
    </style>

    <style name="TextTitle">
        <item name="android:background">@color/background_content_root_night</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitleNotBackground">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_root_night</item>
        <item name="cardCornerRadius">@dimen/dimen_16</item>
    </style>

    <style name="ButtonBack">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="LineVertical">
        <item name="android:background">@color/white</item>
    </style>
</resources>